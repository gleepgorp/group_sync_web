{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@configs/*": ["configs/*"],
      "@hooks/*": ["hooks/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@plugins/*": ["plugins/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}